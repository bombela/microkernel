#pragma once
#ifndef STREAMBUF_H
#define STREAMBUF_H

namespace kernel {
namespace std {

class streambuf
{
	public:
		virtual ~streambuf() {}
		virtual void write(const char*) = 0;
		virtual void write(char) = 0;
};

} // namespace std
} // namespace kernel

#endif /* STREAMBUF_H */
