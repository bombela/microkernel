#pragma once
#ifndef FORWARD_H
#define FORWARD_H

#include <kernel/std/bits/decay.hpp>

namespace std {
namespace kernel_std {
	
template <typename T>
T&& forward(typename remove_ref<T>::type& arg) {
	return static_cast<T&&>(arg);
}

} // namespace kernel_std
} // namespace std

#endif /* FORWARD_H */
